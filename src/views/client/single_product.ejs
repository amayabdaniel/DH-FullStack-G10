<%- include('../partials/head')%>
<body>
  <%- include('../partials/header')%>
  <main>
    <section class="album-section">
      <h1 class="singleProductPageTitle">
        Discover <%=product.name%>'s albums
      </h1>
      <% albums.forEach(album => { %>
      <div class="albumProductCard">
        <article class="albumProductContent">
          <picture class="album-card">
            <img
              src="<%= album.albumCover %>"
              alt="<%= album.name%>"
              class="album-picture"
            />
          </picture>
          <div class="albumInfo">
            <h3 class="albumName"><%= album.name %></h3>
            <h4 class="album-price">
              Price: $<span class="albumPriceInteger"> <%= album.price %></span
              >,00
            </h4>
          </div>
        </article>
        <button
          id="addToCart"
          class="CTA"
          type="submit"
          data-id="<%= album.idAlbum %>"
        >
          Add to cart
          <span class="iconify" data-icon="carbon:shopping-cart"></span>
        </button>
      </div>
      <% }) %>
    </section>
    <%- include("../partials/floatingCart.ejs") %>
  </main>
  <script src="/js/addToCart.js"></script>
</body>
<%- include('../partials/footer')%>
